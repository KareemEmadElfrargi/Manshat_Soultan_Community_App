<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/base_font_cairo</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/sub_title_font_ciaro_light</item>
        <item name="android:textColor">@color/titleSecondary</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>
    <style name="postTextCaption">
        <item name="android:fontFamily">@font/sub_title_font_ciaro_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/postTextCaptionSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:background">@drawable/red_background</item>
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
    </style>


    <dimen name="h4TextSize">30sp</dimen>
    <dimen name="h2TextSize">20sp</dimen>
    <dimen name="postTextCaptionSize">14sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>

    <style name="DialogStylle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/base_font_cairo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/sub_title_font_ciaro_light</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>